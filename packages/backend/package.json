{
  "name": "@thesis/backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist",
    "start": "bun run dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun run src/db/seed.ts",
    "db:test:push": "set DB_TARGET=test && drizzle-kit push",
    "db:test:migrate": "set DB_TARGET=test && drizzle-kit migrate"
  },
  "dependencies": {
    "@thesis/shared": "workspace:*",
    "@neondatabase/serverless": "^0.10.0",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.0",
    "nanoid": "^5.0.0",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.28.0",
    "fast-check": "^3.22.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
