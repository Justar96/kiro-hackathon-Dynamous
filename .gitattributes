# Auto detect and normalize line endings
* text=auto

# Bun
bun.lock text eol=lf

# JavaScript/TypeScript
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf

# Solidity
*.sol text eol=lf linguist-language=Solidity

# Config
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Web
*.html text eol=lf
*.css text eol=lf

# Docs
*.md text eol=lf

# Shell
*.sh text eol=lf

# Binary
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary

# Generated (exclude from stats)
packages/frontend/src/routeTree.gen.ts linguist-generated
dist/** linguist-generated
contracts/out/** linguist-generated

# Vendored
node_modules/** linguist-vendored
contracts/lib/** linguist-vendored
